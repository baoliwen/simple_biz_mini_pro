.search-div{
    width:75%;
    margin-left:2%;
    border:5rpx solid gray;
    border-radius:14rpx;
    margin:0rpx auto;
    padding-left:20rpx;
    margin-top:25rpx;
}
.index-container{
    height: 100%;
    min-height: 100%;
    padding-bottom: 50px;
}

.footer {
    position:fixed;
    left:0px;
    bottom:0px;
    width:100%;
    height:7%;
    background-color:#02A2FE;
    z-index:9999;
    text-align:center;
    border:1px solid #02A2FE;
}
.footer-text{
    position:relative;
    top:21%;
}
.index-search .search-btn{
    margin-top:3.5%;
    font-size:112%;
    padding-right:5%;
}
.index-search{
    display: flex;
    margin-bottom:2%;
}

.index-container .result-item .title{
    padding:0rpx 20rpx;
}
.index-container .result-item .subtitle{
    margin-top:3rpx;
    padding:0rpx 20rpx;
}
.content {
    width: 100%;
    font-size:80%;
    padding: 10px;
    line-height: 22px;
    margin-right:0;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    margin-left: -90px
}
.touch-item {
    display: flex;
    justify-content: space-between;
    border-bottom:1px solid #ccc;
    width: 100%;
    overflow: hidden
}
.del {
    background-color: orangered;
    width: 90px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    -webkit-transform: translateX(90px);
    transform: translateX(90px);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
}
.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}